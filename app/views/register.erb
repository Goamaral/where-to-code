<%= error_messages_for @user %>

<% form_tag url_for(:register) do %>
  <%= label_tag :username %>
  <%= text_field_tag :username %>

  <%= label_tag :email %>
  <%= email_field_tag :email %>

  <%= label_tag :password %>
  <%= password_field_tag :password %>

  <%= submit_tag 'Register' %>
<% end %>