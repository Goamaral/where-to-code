= form_for @user, url_for(:register) do |f|
  %div
    = f.error_messages

  %div
    = f.label :username
    = f.text_field :username

  %div
    = f.label :email
    = f.email_field :email

  %div
    = f.label :password
    = f.password_field :password

  %div
    = f.label :password_confirmation
    = f.password_field :password_confirmation

  %div
    %p
      = f.check_box :terms
      I accept the
      = link_to "terms of service", url_for(:terms)

  %div
    = f.submit 'Register'